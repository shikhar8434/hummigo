<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hummigo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/col1</item>
        <item name="colorPrimaryVariant">@color/col1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/col2</item>
        <item name="colorSecondaryVariant">@color/col2</item>
        <item name="colorOnSecondary">@color/col2</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/col3</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="noactionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor" tools:targetApi="l">@color/col3</item>

    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/circular_pb</item>
    </style>
    <style name="MyBase.TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>